


{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "freecut",
  "version": "0.1.0",
  "identifier": "gabriel.martins",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FreeCut",
        "width": 1920,
        "height": 1080,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": {
      "default-src": "'self' asset: https://asset.localhost;",
      "img-src": "'self' asset: https://asset.localhost blob: data:",
      "script-src": "'self' asset: https://asset.localhost",
      "style-src": "'self' asset: https://asset.localhost"
      },
      
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/ffmpeg"
    ]
  },
  "plugins": {
    "fs": {
      
    }
  }
  
}
