{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Permiss√µes corrigidas para Tauri v2",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-stat",
    "core:webview:default",
    "fs:allow-appdata-read-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "*/**" }
      ]
    }
  ]
}